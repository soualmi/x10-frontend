function formatNumber(num: number): string {
  if (num >= 1_000_000) return `${(num / 1_000_000).toFixed(1)}M`;
  if (num >= 1_000) return `${(num / 1_000).toFixed(1)}K`;
  return num.toString();
}

function getMarketStatus(stats: ApiStats): { title: string; description: string; } {
  const rate = stats.total_products > 0 ? (stats.high_potential / stats.total_products) * 100 : 0;
  
  if (stats.high_potential === 0) return { 
    title: 'Marche en observation', 
    description: 'Aucun signal prioritaire detecte actuellement. Oracle continue l analyse en continu. Les opportunites emergentes apparaitront des leur detection.'
  };
  
  if (rate >= 20) return { 
    title: 'Dynamique favorable', 
    description: 'Plusieurs opportunites emergent simultanement. Le marche presente des fenetres de decision interessantes. Analysez les signaux pour identifier les priorites.'
  };
  
  return { 
    title: 'Opportunites selectives', 
    description: 'Quelques signaux interessants detectes. Le marche reste selectif. Concentrez-vous sur les opportunites a fort potentiel.'
  };
}
